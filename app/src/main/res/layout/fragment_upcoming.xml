<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context="com.akhilagarwal96.vu.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:weightSum="1"
        android:orientation="horizontal"
        android:id="@+id/layout1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:id="@+id/course_name"
            android:text="Computer Architecture And Organization"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:text="SJT 403"
            android:textSize="22dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:orientation="vertical"
        android:id="@+id/layout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_code"
            android:text="CSE2003"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:layout_below="@+id/layout1"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_slot"
            android:text="C2"
            android:textSize="20dp"
            android:textAllCaps="true"/>

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/progress_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            app:enabled="false"
            android:rotation="180"
            app:startAngle="30"
            app:sweepAngle="300"
            app:touchInside="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_weight=".02"
        android:weightSum="1"
        android:layout_below="@id/layout3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/last_update"
            android:text="Last Updated : "
            android:textSize="20dp"
            android:textAlignment="viewEnd"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/last_update_date"
            android:text="30-05-2017"
            android:textSize="20dp"
            android:textAlignment="viewStart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight=".05"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".5"
            android:id="@+id/attend_button"
            android:text="A"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".5"
            android:id="@+id/miss_button"
            android:text="M" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_layout"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight=".10"
        android:gravity="center">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/attend_count"
                android:text="1"
                android:textAlignment="center"
                android:layout_weight=".5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/miss_count"
                android:text="2"
                android:textAlignment="center"
                android:layout_weight=".5"/>

        </TableRow>

    </TableLayout>

</LinearLayout>